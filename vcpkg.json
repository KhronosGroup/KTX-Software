{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "ktx-software",
  "features": {
    "loadtests": {
      "description": "OpenGL & Vulkan Load Tests.",
      "dependencies": [
        "assimp",
        {
          "name": "sdl2",
          "default-features": true,
          "features": [
            "vulkan"
          ]
        }
      ]
    },
    "glloadtests": {
      "description": "OpenGL Load Tests.",
      "dependencies": [
        {
          "name": "glew",
          "platform": "windows"
        }
      ]
    }
  }
}

